{
  "name": "herbist-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --stats-json",
    "postbuild": "node postbuild.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:ssr": "ng build --configuration production --stats-json && ng run HerbistClient:server",
    "serve:ssr:HerbistClient": "node dist/HerbistClient/server/server.mjs"
  },
  "prettier": {
    "singleAttributePerLine": false,
    "printWidth": 900,
    "semi": true,
    "bracketSameLine": true,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.6",
    "@angular/cdk": "^20.1.5",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/localize": "^20.1.6",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.5",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "@stripe/stripe-js": "^7.8.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.3.7",
    "express": "^5.1.0",
    "font-awesome": "^4.7.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "ngx-bootstrap": "^20.0.0",
    "ngx-cookieconsent": "^8.0.0",
    "ngx-owl-carousel-o": "^20.0.1",
    "ngx-progressbar": "^14.0.0",
    "ngx-toastr": "^19.0.0",
    "prettier": "^3.6.2",
    "rxjs": "~7.8.0",
    "source-map-explorer": "^2.5.3",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@types/express": "^5.0.1",
    "@types/gtag.js": "^0.0.19",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "purgecss": "^7.0.2",
    "typescript": "~5.8.2"
  }
}
